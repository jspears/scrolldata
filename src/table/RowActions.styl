
:hover ~ .row-actions, :hover > .row-actions, .row-actions:hover, .row-actions.display
    display flex

.row-actions
    display none
    position: sticky;
    flex: none;
    width: 0;
    right: 10px;
    top: 0;

.actions
    display flex
    flex-direction row
    color rgb(33, 33, 33)
    transform-origin center right
    transition transform .1s linear
    z-index 1
    list-style none
    flex-wrap nowrap
    align-items space-between
    padding 0
    margin 0
    justify-content flex-end
    position sticky
    right: 0
    padding-right 5px

//    height 100%

//Label is here just for aria and for convience.
.label
    display none

.action, .menu-item
    display flex
    align-items center
    padding 8px 10px
    pointer cursor
    background #fff

.action-menu
    display flex
    flex-direction column
    margin 0
    padding 5px 0
    cursor default
    background-color #fff
    border-radius 2px
    box-shadow 0 0 6px rgba(0, 0, 0, .16), 0 6px 12px rgba(0, 0, 0, .32)
    color #757575
    list-style none
    line-height 32px
    min-width 200px
    max-width 200px
    outline none
    text-align left
    white-space nowrap    

.action-menu
    .action.enabled:hover
        .icon
            background-color rgba(0, 0, 0, .1)

    .label
        display inline
        position relative
        top inherit
        opacity .99
        height auto
        width auto

    .icon + .label
        padding 3px 0 0 10px

    .action
        border-bottom 1px solid rgba(0, 0, 0, .2)

    .action:last-child
        border-bottom 1px solid transparent

.action
    cursor pointer

.action.disabled
    cursor normal

.icon
    border-radius: 50%
    background: transparent
    display: inline-block
    padding: 5px
    cursor pointer

.enabled .icon:active, .enabled .active > .icon
    border-radius 50%
    background #ddd
    display inline-block
    padding 5px


